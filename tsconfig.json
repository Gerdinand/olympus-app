{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "dom",
      "es2017",
      "es2015.promise",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "react-native",
    "jest",
    "nodes",
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules",
    "__tests__",
    "typings"
  ],
  "compileOnSave": false,
}
